<form class="d-flex justify-content-center" action="/users/login" method="POST">
  <div id="login-form" class="form-group">
    <h2 class="form-signin-heading text-center font-style">Please Login</h2>

    <label for="inputEmail" class="mt-3">Email address</label>
    <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>

    <label for="inputPassword" class="mt-3">Password</label>
    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
    <a href="/users/resetpassword">Forgot Your Password ?</a>
    <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Login</button>
  </div>
</form>