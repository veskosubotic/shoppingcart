<form class="d-flex justify-content-center" action="/users/register" method="POST">
  <div id="register-form" class="form-group">
    <h2 class="form-signin-heading text-center font-style">Please Register</h2>

    <label for="inputEmail" class="mt-3">Email address</label>
    <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>

    <label for="inputUsername" class="mt-3">Username</label>
    <input type="text" id="inputUsername" name="username" class="form-control" placeholder="Username" required>

    <label for="inputPassword" class="mt-3">Password</label>
    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>

    <label for="inputConfirmPassword" class="mt-3">Confirm Password</label>
    <input type="password" id="inputConfirmPassword" name="confirmationPassword" class="form-control" placeholder="Confirm Password" required>

    <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Register</button>
  </div>
</form>